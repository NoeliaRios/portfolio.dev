---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from "../icons/GitHub.astro";
import SocialPill from "../components/SocialPill.astro";
import MailIcon from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import MaletinIcon from "../icons/Maletin.astro";
import CodeIcon from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de Noelia Ríos - Desarrolladora y Programadora web con +3 años de experiencia"
  description="Contrata a Noelia Ríos para crear tu aplicación web. Desarrollador Web y Programador Web. Especializada en crear interfaces únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full w-20 h-20"
        src="../../public/1717992714611a.png"
        alt="profile dev photo"
      />
      <h1
        class="text-4xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 lg:pb-10 pb-6"
      >
        Hey, soy Noelia Ríos <a
          href="https://www.linkedin.com/in/noelia-rios/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl opacity-80 text-wrap sm:*:max-w-[700px]">
        <span class="opacity-90">+3 años de experiencia.</span>
        <span class="accent-orange">Desarrolladora Web</span>
        <span class="opacity-90">de Buenos Aires, Argentina. </span><span
          class="opacity-90">Especializada en Frontend y Diseño Web.</span
        >
      </h2>

      <nav class="flex flex-wrap gap-4 mt-10">
        <SocialPill href="https://www.linkedin.com/in/noelia-rios/">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/NoeliaRios">
          <GitHubIcon class="size-4 md:size-6" />
          Github
        </SocialPill>
        <SocialPill href="mailto:noelia.marr.87@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          noelia.marr.87@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <MaletinIcon class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="proyectos">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
